<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="movie"
            type="com.example.imdb_application.data.model.Movie" />
        <variable
            name="clickListener"
            type="com.example.imdb_application.view.adapter.MovieListener" />
        <variable
            name="view"
            type="com.example.imdb_application.view.adapter.MovieListAdapter.MovieViewHolder" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/item_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        android:layout_margin="8dp"
        app:cardCornerRadius="8dp"

        android:onClick="@{() -> clickListener.onClick(movie)}"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/movie_image"
                android:layout_width="wrap_content"
                android:layout_height="175dp"
                android:transitionName="@{@string/posterImage(String.valueOf(movie.id))}"
                android:scaleType="fitCenter"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                tools:src="@tools:sample/backgrounds/scenic"
                app:imageUrl="@{movie.image}"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2">

                <TextView
                    android:id="@+id/movie_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_margin="8dp"
                    android:text="@{movie.fullTitle}"/>

            </LinearLayout>

        </LinearLayout>




    </com.google.android.material.card.MaterialCardView>

</layout>