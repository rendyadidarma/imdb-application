<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/buff</item>
        <item name="colorPrimaryDark">@color/mustard_yellow</item>
        <item name="colorAccent">@color/design_default_color_background</item>
    </style>

    <style name="AppTheme.NoActionbar">
        <item name="colorPrimary">@color/mustard_yellow</item>
        <item name="colorSecondary">@color/buff</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

</resources>